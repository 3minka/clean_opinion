import numpy as np
from sklearn.metrics import normalized_mutual_info_score, adjusted_rand_score

nmi = normalized_mutual_info_score
ari = adjusted_rand_score


def acc_top10(y_true, y_pred):
    """
    Calculate clustering accuracy. Require scikit-learn installed

    # Arguments
        y: true labels, numpy.array with shape `(n_samples,)`
        y_pred: predicted labels, numpy.array with shape `(n_samples,)`

    # Return
        accuracy, in [0,1]
    """
    y_true = np.array(y_true, dtype=np.float32)
    y_true = y_true.astype(np.int64)
    assert y_pred.size == y_true.size
    D = max(y_pred.max(), y_true.max()) + 1
    w = np.zeros((D, D), dtype=np.int64)  # D  = label 갯수 (0~50)
    
    for i in range(len(y)):
        w[y_pred[i], y_true[i]] += 1   # shape == (y_pred.size, 1)  # (y_pred.size == 문서갯수)
    from sklearn.utils.linear_assignment_ import linear_assignment
    ind = linear_assignment(w.max() - w)   # w.max() - w == (D, D) // ind == (D, 2) shape
    return sum([w[i, j] for i, j in ind]) * 1.0 / len(y)
